<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_news"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginBottom="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        >
        <ImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/gopay"
            android:scaleType="fitXY"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GoFood"
            android:layout_marginTop="-30dp"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nikmati Diskon 30%!"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <ImageView
                android:id="@+id/img_kalender"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/kalender"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="4dp"
                />
            <TextView
                android:id="@+id/valid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valid untin May 10, 2020"
                android:layout_toRightOf="@id/img_kalender"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="@drawable/usepromo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Use"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="10dp"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>